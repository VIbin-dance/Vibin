<div class="top-space"></div>
<section id="follow" class="follow">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xs-6">
                <h3>Following</h3>
                <hr>
                <% for(j=0; j < allUser.length; j++) { %>
                <% for(i=0; i < allUser[j].length; i++) { %>
                <h5><%= user[j].username %> liked | <%= time[j][i] %></h5>
                <div class="box">
                    <h4 id="allUser[j][i][0].title<%= i %>"><%= allUser[j][i][0].title %>
                        <a class="special"
                            href="/choreographer/<%= allUser[j][i][0].choreographer %>"><%= allUser[j][i][0].choreographer %></a>
                    </h4>
                    <!-- <p><%= allUser[j][i][0].level[0] %></p> -->
                    <a href="/player/<%= allUser[j][i][0].id %>">
                        <img src="<%= allUser[j][i][0].thumbnail %>" alt="thumbnail">
                    </a>
                </div>
                <hr>
                <% } %>
                <% } %>
            </div>

            <aside class="col-md-4 blog-sidebar">
                <h4>Who to follow</h4>
                <% for(let i=0; i < recUser.length; i++) { %>
                <% if (recUser[i].email != currentUser.email) { %>
                <div class="p-3 mb-3 bg-light rounded">
                    <h6>
                        <a href="/users/<%= recUser[i]._id %>">
                            <% if (typeof recUser[i].userPhotoDef.data != "undefined") { %>
                            <img src="data:image/<%=recUser[i].userPhotoDef.contentType%>;base64, <%=recUser[i].userPhotoDef.data.toString('base64')%>"
                                height="40" width="40" style="border-radius: 50%;" alt="user photo">
                            <% } else { %>
                            <img src="<%= recUser[i].userPhoto %>" height="40" width="40" style="border-radius: 50%;"
                                alt="user photo">
                            <% } %>
                            | <%= recUser[i].username %>
                        </a>
                    </h6>
                    <p><%= recUser[i].bio %></p>
                </div>
                <% } %>
                <% } %>
            </aside><!-- /.blog-sidebar -->
        </div><!-- /.row -->
    </div>
</section>

