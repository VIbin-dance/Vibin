<header id="header" class="fixed-top">
    <div class="container d-flex align-items-center justify-content-between">
        <h1 class="logo"><a href="/dashboard/-1?page=1&limit=15">Vibin'</a></h1>
        <nav class="nav-menu d-none d-lg-block">
            <ul>
                <li class="active">
                    <a href="/dashboard/-1?page=1&limit=15">
                        <%= __('header.Home') %>
                    </a>
                </li>
                <li>
                    <a href="/follow">
                        <%= __('header.Following') %>
                    </a>
                </li>
                <li>
                    <a href="/calendar">
                        <%= __('header.Calendar') %>
                    </a>
                </li>
                <li>
                    <a href="/create">
                        <%= __('header.Create') %>
                    </a>
                </li>
            </ul>
        </nav>
        <nav class="nav-menu d-none d-lg-block">
            <ul>
                <li class="drop-down">
                    <% if (typeof userPhotoDef.data != "undefined") { %>
                        <img src="data:image/<%=userPhotoDef.contentType%>;base64, <%=userPhotoDef.data.toString('base64')%>" height="40" width="40" style="border-radius: 50%;" alt="user photo">
                        <% } else { %>
                            <img src="<%= userPhoto %>" height="40" width="40" style="border-radius: 50%;" alt="user photo">
                            <% } %>
                                <ul>
                                    <li>
                                        <a href="/users/profile">
                                            <%= __('header.Profile') %>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/logout">
                                            <%= __('header.Logout') %>
                                        </a>
                                    </li>
                                </ul>
                </li>
            </ul>
        </nav>
    </div>
</header>

<br>
<section id="results">
    <div class="container">
        <div class="col-lg-8 col-xs-12 m-auto text-center">
            <%- include ('partials/messages') %>

                <% if (typeof userPhotoDef.data != "undefined") { %>
                    <img src="data:image/<%=userPhotoDef.contentType%>;base64, <%=userPhotoDef.data.toString('base64')%>" height="100" width="100" style="border-radius: 50%; margin: 20px;" alt="user photo">
                    <% } else { %>
                        <img src="<%= userPhoto %>" height="100" width="100" style="border-radius: 50%; margin: 20px;" alt="user photo">
                        <% } %>

                            <a class="btn btn-danger" href="/users/profile/edit">
                                <%= __('profile.edit profile') %>
                            </a>
                            <h2 class="mb-3"><i class="fas fa-user-plus"></i>
                                <%= username %>
                            </h2>
                            <!-- <p>
                                <%= followerCount %>
                                    <%= __('profile.follower') %>
                            </p>
                            <p>
                                <%= followingCount %>
                                    <%= __('profile.following') %>
                            </p> -->
                            <p>
                                <%= bio %>
                            </p>
                            <a class="btn btn-dark" href="/logout">
                                <%= __('profile.logout') %>
                            </a>
        </div>
    </div>
</section>

<section id="results" class="results">
    <div class="container">
        <h3>
            Lessons ahead
        </h3>
        <hr>
        <div class="row">
            <% for(let i=0; i < lesson.length; i++) { %>
                <div class="col-lg-4 col-xs-6">
                    <div class="box">
                        <a href="/player/<%= lesson[i].id %>">
                        <img src="<%= lesson[i].thumbnail %>" alt="thumbnail">
                    </a>
                        <h4 id="lesson.title<%= i %>">
                            <%= lesson[i].title %>
                        </h4>
                        <a class="special" href="/choreographer/<%= lesson[i].choreographer %>">
                            <%= lesson[i].choreographer %>
                        </a>
                        <p>
                            <%= lesson[i].level[0] %>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</section>
