<div class="top-space">
    <section id="results" class="results">
        <div class="container">
            <div class="col-lg-8 col-xs-12 m-auto text-center">
                <%- include ('partials/messages') %>
                    <img src="<%= user.userPhoto %>" height="100" width="100" style="border-radius: 50%; margin: 20px;" alt="user photo">

                    <a class="btn btn-danger" href="/users/profile/edit">
                        <%= __('profile.edit profile') %>
                    </a>
                    <h2 class="mb-3"><i class="fas fa-user-plus"></i>
                        <%= user.username %>
                    </h2>
                    <p style="white-space:pre-wrap;">
                        <%= bio %>
                    </p>
                    <a class="btn btn-dark" href="/logout">
                        <%= __('profile.logout') %>
                    </a>
            </div>
        </div>
    </section>

    <% if (lesson.length> 0) { %>
        <section id="results" class="results">
            <div class="">
                <h2 class="text-center">教えるレッスン</h2>
                <hr>
                <div class="row">
                    <% for(let i=0; i < lesson.length; i++) { %>
                        <div class="col-lg-3 col-xs-6 pad">
                            <div class="box">
                                <a href="/lesson/teacher/<%= lesson[i]._id %>">
                                <img src="data:image/<%=lesson[i].thumbnail.contentType%>;base64, <%=lesson[i].thumbnail.data.toString('base64')%>"
                                    alt="thumbnail">
                            </a>
                                <h4 id="lesson.title<%= i %>">
                                    <%= lesson[i].title %>
                                        <a class="btn btn-sm btn-dark float-right" href="/lesson/edit/<%= lesson[i]._id %>">詳細</a>
                                </h4>
                                <a class="special" href="/choreographer/<%= user.googleId%>">
                                    <%= user.username %>
                                </a>
                                <p>
                                    <%= lesson[i].price %>
                                        <%= __('dashboard.Yen') %> |
                                            <%= moment(lesson[i].time).format('MM/DD HH:mm'); %> |
                                                <%= __(`dashboard.search.level.${lesson[i].level[0]}`) %> |
                                                    <%= __(`dashboard.search.genre.${lesson[i].genre[0]}`) %>
                                </p>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </section>
        <% } %>
            <% if (tickets.length> 0) { %>
                <section id="results" class="results">
                    <div class="">
                        <h2 class="text-center">購入したレッスン一覧</h2>
                        <hr>
                        <div class="row">
                            <% for(let i=0; i < tickets.length; i++) { %>
                                <div class="col-lg-3 col-xs-6 pad">
                                    <div class="box">
                                        <a href="/lesson/student/<%= tickets[i]._id %>">
                                <img src="data:image/<%=tickets[i].thumbnail.contentType%>;base64, <%=tickets[i].thumbnail.data.toString('base64')%>"
                                    alt="thumbnail">
                            </a>
                                        <h4 id="tickets.title<%= i %>">
                                            <%= tickets[i].title %>
                                                <a class="btn btn-sm btn-dark float-right" href="/lesson/student/details/<%= tickets[i]._id %>">詳細</a>
                                        </h4>
                                        <a class="special" href="/choreographer/<%= tickets[i].choreographerID %>">
                                            <%= choreographer[i].username %>
                                        </a>
                                        <p>
                                            <%= tickets[i].price %> Yen |
                                                <%= moment(tickets[i].time).format('MM/DD HH:mm'); %>
                                        </p>
                                        <p class="mb-0">
                                            <%= __(`dashboard.search.level.${tickets[i].level[0]}`) %> |
                                                <%= __(`dashboard.search.genre.${tickets[i].genre[0]}`) %> |
                                                    <%= __(`dashboard.search.mood.${tickets[i].mood[0]}`) %>
                                        </p>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </section>
                <% } %>

                    <section id="results" class="results">
                        <div class="container">
                            <h3>マイチャンネル</h3>
                            <hr>
                            <a class="btn btn-dark" href="/lesson/channel">チャンネル管理</a>
                        </div>
                    </section>