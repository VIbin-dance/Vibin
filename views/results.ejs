<div class="top-space"></div>
<% if (lesson.docs.length) { %>
    <section class="blog_masonry four_column" style="padding-top: 0;">
        <div class="container col-lg-11">
            <%- include ('partials/messages') %>
                <div class="row">
                    <div class="banner_title_inner">
                        <h1 data-aos="fade-up" data-aos-delay="0" class="aos-init aos-animate">
                            検索結果&#10024;
                        </h1>
                    </div>
                    <div class="card-columns">
                        <% for (let i=0; i < lesson.docs.length; i++) { %>
                            <div class="card">
                                <a href="/reservation/<%= lesson.docs[i]._id %>" class="link_poet">
                                    <div class="cover_link">
                                        <img class="main_img" src="<%= lesson.docs[i].thumbnail %>" alt="...">
                                        <div class="auther_post">
                                            <div class="media">
                                                <img src="<%= choreographer[i].userPhoto %>" alt="先生のプロフィール画像">
                                                <div class="media-body my-auto">
                                                    <div class="txt">
                                                        <h4>
                                                            <%= choreographer[i].username %>
                                                        </h4>
                                                        <!-- <p>
                                                        <%= lesson.docs[i].date %>
                                                    </p> -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <div class="card-body">
                                    <div class="about_post">
                                        <span class="c_ategory">
                                            <a href="#">
                                                <%= __(`dashboard.search.level.${lesson.docs[i].level[0]}`) %>
                                            </a>
                                            <a href="#">
                                                <%= __(`dashboard.search.genre.${lesson.docs[i].genre[0]}`) %>
                                            </a>
                                        </span>
                                        <span class="dot"></span>
                                        <time>
                                            <%= moment(lesson.docs[i].time.start).format('MM/DD HH:mm'); %> ~ <%=
                                                    lesson.docs[i].time.end %>
                                        </time>
                                    </div>
                                    <a href="/reservation/<%= lesson.docs[i]._id %>" class="d-block">
                                        <h5 class="card-title">
                                            <%= lesson.docs[i].title %>
                                        </h5>
                                        <p class="card-text">
                                            <%= lesson.docs[i].price %>円
                                        </p>
                                    </a>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
        </div>
    </section>
    <% } %>

<script>
    function charCut() {
        for (let i = 0; i < 15; i++) {
            let title = document.getElementById("title" + i).innerHTML;
            if (title[70]) {
                document.getElementById("title" + i).innerHTML = title.substring(0, 70) + "...";
            }
        }
    }
    var quotes = [
        "<%= __('dashboard.Quote.1') %>",
        "<%= __('dashboard.Quote.2') %>",
        "<%= __('dashboard.Quote.3') %>",
        "<%= __('dashboard.Quote.4') %>"
    ];
    let index = Math.floor(Math.random() * (quotes.length));

    document.getElementById("random").innerHTML = quotes[index];
</script>