<head>
    <link href="/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <!-- by ymzk -->
    <!-- <script src="/assets/vendor/jquery/jquery.min.js"></script> -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/video.js/7.6.6/video-js.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/video.js/7.6.6/video.min.js"></script>
    <script src="https://player.live-video.net/1.2.0/amazon-ivs-videojs-tech.min.js"></script>
    <script src="https://player.live-video.net/1.2.0/amazon-ivs-quality-plugin.min.js"></script>

</head>

<!-- live video & chat section -->

<section id="live_grid">
    <input type="hidden" name="ch_playurl" id="ch_playurl" value="<%= ch_playURL %>">
    <input type="hidden" name="ch_playTime" id="ch_playTime" value="">
    <input type="hidden" name="ch_arn" id="ch_arn" value="<%= ch_arn %>">
    <input type="hidden" name="username" id="username" value="<%= username %>">
    <p><%= typeof userPhoto %></p>
    <% if (typeof userPhotoDef != "undefined" ) { %>
        <input type="hidden" name="userphotoDefData" id="userphotoDefData" value="<%= userPhotoDef.data.toString('base64')%>">
        <input type="hidden" name="userphotoDefType" id="userphotoDefType" value="<%= userPhotoDef.contentType %>">
    <% } else if (typeof userPhoto !="undefined" ) { %>
        <input type="hidden" name="userphoto" id="userphoto" value="<%= userPhoto %>">
    <% } %>
                <input type="hidden" name="chat_room_id" id="chat_room_id" value="<%= ch_streamkey %>">
                <div class="live_grid">
                    <div class="video_grid ">
                        <%- include ('partials/messages') %>

                            <div class="channelView-ivs">

                                <!-- vjs-theme-fantasy -->
                                <!-- vjs-theme-city -->
                                <!-- vjs-theme-forest -->
                                <!-- vjs-theme-sea -->
                                <!-- vjs-fluid, vjs-16-9, or vjs-4-3 -->
                                <div id="live_screen">
                                    <video id="amazon-ivs-videojs" class="video-js vjs-fluid vjs-fill vjs-big-play-centered" preload="auto" controls autoplay playsinline></video>
                                </div>
                                <!-- <video id="self_camera" autoplay playsinline preload="auto"></video> -->
                                <div id="self_camera"></div>
                            </div>


                            <div class="channel_info student">
                                <div class="user_info">
                                    <a href="" class="avatar live_status">
                                        <div class="outline"></div>
                                        <div class="inner_img">
                                            <figure>
                                                <% if (typeof choreographer.userPhotoDef !="undefined" ) { %>
                                                    <img src="data:image/<%= choreographer.userPhotoDef.contentType%>;base64, <%= choreographer.userPhotoDef.data.toString('base64')%>" height="100" width="100" style="border-radius: 50%;" alt="user photo">
                                                    <% } else { %>
                                                        <img src="<%= choreographer.userPhoto %>" height="60" width="60" style="border-radius: 50%;" alt="user photo">
                                                        <% } %>
                                            </figure>
                                        </div>
                                    </a>
                                    <div class="infor">
                                        <p class="name">
                                            <%= ch_name %>
                                        </p>
                                        <p class="level">先生 :
                                            <%= choreographer.username %>
                                        </p>
                                        <ul class="category_grid">
                                            <li>
                                                <a href="">
                                                    <%= __(`dashboard.search.level.${lesson.level[0]}`) %>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="">
                                                    <%= __(`dashboard.search.genre.${lesson.genre[0]}`) %>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="">
                                                    <%= __(`dashboard.search.purpose.${lesson.purpose[0]}`) %>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="">
                                                    <%= __(`dashboard.search.mood.${lesson.mood[0]}`) %>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="count_info">
                                    <div class="btn_grid">
                                        <button id="mirror" onclick="mirrorToggle()">
                                <svg width="2.5em" height="2.5em" viewBox="0 0 16 16" class="bi bi-aspect-ratio" fill="currentColor"
                                xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                d="M0 3.5A1.5 1.5 0 0 1 1.5 2h13A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 12.5v-9zM1.5 3a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-13z" />
                                <path fill-rule="evenodd"
                                d="M2 4.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1H3v2.5a.5.5 0 0 1-1 0v-3zm12 7a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1 0-1H13V8.5a.5.5 0 0 1 1 0v3z" />
                                </svg>
                            </button>
                                        <!-- <button class="favorite"><img src="/assets/img/like.png" alt=""></button> -->
                                        <!-- <button class="follow">フォロー</button> -->
                                    </div>
                                    <div class="channel_status">
                                        <p class="login_users"></p>
                                        <p class="live_time"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="chinfo p-3 mb-3 rounded">
                                <div class="text-center">
                                    <h4>
                                        <%= __('reservation.choreo') %>
                                    </h4>
                                    <% if (typeof choreographer.userPhotoDef !="undefined" ) { %>
                                        <img src="data:image/<%= choreographer.userPhotoDef.contentType%>;base64, <%= choreographer.userPhotoDef.data.toString('base64')%>" height="100" width="100" style="border-radius: 50%;" alt="user photo">
                                        <% } else { %>
                                            <img src="<%= choreographer.userPhoto %>" height="60" width="60" style="border-radius: 50%;" alt="user photo">
                                            <% } %>
                                </div>
                                <div class="text-center">
                                    <a href="/choreographer/<%= choreographer.googleId %>" style="font-size: 22px;">
                                        <%= choreographer.username %>
                                    </a>
                                    <br><br>
                                    <h5 style="white-space:pre-wrap;"><%= choreographer.bio %></h5>
                                    <p class="mb-0">
                                        <%= __('reservation.contact') %>:
                                            <a href="mailto:<%= choreographer.email %>">
                                                <%= choreographer.email %>
                                            </a>
                                    </p>
                                </div>
                            </div>
                    </div>

                    <div class="chat_grid collapseOn">
                        <div class="contain">
                            <div class="chat_header">CHAT</div>
                            <div class="message_wrap">
                                <ul class="message_list"></ul>
                            </div>
                            <div class="input_wrap">
                                <!-- <button class="btn1">投げ銭</button> -->
                                <input name="" id="chat_msg" placeholder="コメントする"></input>
                                <button class="send_btn"><img src="/assets/img/send.png" alt=""></button>
                            </div>
                        </div>
                    </div>

                    <button class="toggle_chat_btn">
            <svg width="100%" height="100%" version="1.1" viewBox="0 0 20 20" x="0px" y="0px"
                class="ScIconSVG-sc-1bgeryd-1 cMQeyU">
                <g>
                    <path d="M4 16V4H2v12h2zM13 15l-1.5-1.5L14 11H6V9h8l-2.5-2.5L13 5l5 5-5 5z"></path>
                </g>
            </svg>
        </button>
                </div>
</section>

<style>
    .mirror {
        transform: rotateY(180deg);
        -webkit-transform: rotateY(180deg);
        -moz-transform: rotateY(180deg);
    }
</style>

<script>
    function mirrorToggle() {
        document.getElementById("live_screen").classList.toggle("mirror");
        console.log('mirrored')
    }
</script>

