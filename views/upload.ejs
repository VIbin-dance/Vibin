  <script>
    function authenticate() {
      return gapi.auth2.getAuthInstance()
        .signIn({ scope: "https://www.googleapis.com/auth/youtube.readonly" })
        .then(function () { console.log("Sign-in successful"); },
          function (err) { console.error("Error signing in", err); });
    }
    function loadClient() {
      gapi.client.setApiKey("<%= API_key %>");
      return gapi.client.load("https://www.googleapis.com/discovery/v1/apis/youtube/v3/rest")
        .then(function () { console.log("GAPI client loaded for API"); },
          function (err) { console.error("Error loading GAPI client for API", err); });
    }
    gapi.load("client:auth2", function () {
      gapi.auth2.init({ client_id: "<%= CLIENT_ID %>" });
    });

    function list() {
      let url = document.getElementById("urlFill").value
      let id = url.replace('https://www.youtube.com/watch?v=', '');

      return gapi.client.youtube.videos.list({
        "part": [
          "snippet,contentDetails,statistics"
        ],
        "id": [
          id
        ]
      })
        .then(function (response) {
          let duration = moment.duration(response.result.items[0].contentDetails.duration);
          document.getElementById("title").value = response.result.items[0].snippet.title;
          document.getElementById("thumbnail").value = response.result.items[0].snippet.thumbnails.standard.url;
          document.getElementById("url").value = url;
          document.getElementById("id").value = id;
          document.getElementById("length").value = duration.format('HH:mm:ss', {trim: false});
          document.getElementById("publishedDate").value = response.result.items[0].snippet.publishedAt;
          document.getElementById("language").value = response.result.items[0].snippet.defaultLanguage;
          if (response.result.items[0].snippet.defaultLanguage == undefined) {
            document.getElementById("language").readOnly = false;
            document.getElementById("language").value = '';
          }
        },
          function (err) { console.error("Execute error", err); });
    }

  </script>