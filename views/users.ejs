<section id="results">
    <div class="container">
        <div class="col-lg-8 col-xs-12 m-auto text-center">
            <%- include ('partials/messages') %>

            <% if (typeof proPhotoDef.data != "undefined") { %>
            <img src="data:image/<%=proPhotoDef.contentType%>;base64, <%=proPhotoDef.data.toString('base64')%>"
                height="100" width="100" style="border-radius: 50%; margin: 20px;" alt="user photo">
            <% } else { %>
            <img src="<%= proPhoto %>" height="100" width="100" style="border-radius: 50%; margin: 20px;"
                alt="user photo">
            <% } %>

            <% if (following.toString() == follower.toString()) { %>
            <a class="btn btn-danger" href="/users/profile/edit">Edit profile</a>
            <% } else if (following.toString() != follower.toString()) { %>
            <form action=":id" method="POST">
                <% const action = currentUser.following.includes(user._id) ? 'unfollow' : 'follow'; %>
                <input type="following" id="following" name="following"
                    value="<%= typeof following != 'undefined' ? following : '' %>" hidden />
                <input type="follower" id="follower" name="follower"
                    value="<%= typeof follower != 'undefined' ? follower : '' %>" hidden />
                <input type="action" id="action" name="action" value="<%= typeof action != 'undefined' ? action : '' %>"
                    hidden />
                <input class="btn btn-danger" type="submit" value="<%= action %>">
            </form>
            <% } %>
            <h2 class="mb-3"><i class="fas fa-user-plus"></i><%= username %></h2>
            <a href="/users/follower/<%= following %>"><%= followerCount %> followers</a>
            <a href="/users/following/<%= following %>"><%= followingCount %> following</a>
            <p><%= bio %></p>
        </div>
    </div>
</section>

<section id="results" class="results">
    <div class="container">
        <h3>Liked videos</h3>
        <hr>
        <% if(likedVid.length === 0) { %>
        <p class="text-center">This user has not liked any videos yet</p>
        <% } %>
        <div class="row">
            <% for(let i=0; i < likedVid.length; i++) { %>
            <div class="col-lg-4 col-xs-6">
                <div class="box">
                    <a href="/player/<%= likedVid[i].id %>">
                        <img src="<%= likedVid[i].thumbnail %>" alt="thumbnail">
                    </a>
                    <h4 id="likedVid.title<%= i %>"><%= likedVid[i].title %></h4>
                    <a class="special"
                        href="/choreographer/<%= likedVid[i].choreographer %>"><%= likedVid[i].choreographer %></a>
                    <p><%= likedVid[i].level[0] %></p>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</section>